<div class="page-header">
  <h1>
    Tagging joins
    <a href="/tagging_joins/new" class="btn btn-lg btn-success">New Tagging join</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Tag</th>
        <th>Posting</th>
        <th>Actions</th>
      </tr>

      <% @tagging_joins.each do |tagging_join| %>
      <tr>
        <td>
          <% if tagging_join.tag.present? %>
            <a href="/tags/<%= tagging_join.tag.id %>">
              <%= tagging_join.tag.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if tagging_join.posting.present? %>
            <a href="/postings/<%= tagging_join.posting.id %>">
              <%= tagging_join.posting.description %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/tagging_joins/<%= tagging_join.id %>" class="btn btn-primary">Show</a>
          <a href="/tagging_joins/<%= tagging_join.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tagging_join/<%= tagging_join.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tagging_joins, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
