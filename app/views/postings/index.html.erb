<div class="page-header">
  <h1>
    Postings
    <a href="/postings/new" class="btn btn-lg btn-success">New Posting</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "postings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
    <%= f.label :actions_cont, "Actions contains" %>
    <%= f.text_field :actions_cont, :class => "form-control", :placeholder => "Actions contains" %>
  </div>

<div class="form-group">
          <%= f.label :end_date, "End date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_dategteqPicker'>
                  <%= f.text_field :end_date_gteq, :class => "form-control", :placeholder => "End date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_datelteqPicker'>
                  <%= f.text_field :end_date_lteq, :class => "form-control", :placeholder => "End date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#end_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#end_dategteqPicker').on("dp.change", function (e) {
                  $('#end_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_datelteqPicker').on("dp.change", function (e) {
                  $('#end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :start_date, "Start date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='start_dategteqPicker'>
                  <%= f.text_field :start_date_gteq, :class => "form-control", :placeholder => "Start date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='start_datelteqPicker'>
                  <%= f.text_field :start_date_lteq, :class => "form-control", :placeholder => "Start date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#start_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#start_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#start_dategteqPicker').on("dp.change", function (e) {
                  $('#start_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#start_datelteqPicker').on("dp.change", function (e) {
                  $('#start_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :volunteers_needed, "Volunteers needed" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :volunteers_needed_gteq, :class => "form-control", :placeholder => "Volunteers needed greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :volunteers_needed_lteq, :class => "form-control", :placeholder => "Volunteers needed less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :poster_email_cont, "User email contains" %>
      <%= f.text_field :poster_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :tags_name_cont, "Tag name contains" %>
      <%= f.text_field :tags_name_cont, :class => "form-control", :placeholder => "Tag name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/postings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#postings_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Volunteers needed</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Actions</th>
        <th>Poster</th>
        <th>Actions</th>
      </tr>

      <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.description %></td>
        <td><%= posting.volunteers_needed %></td>
        <td><%= posting.start_date %></td>
        <td><%= posting.end_date %></td>
        <td><%= posting.actions %></td>
        <td>
          <% if posting.poster.present? %>
            <a href="/users/<%= posting.poster.id %>">
              <%= posting.poster.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/postings/<%= posting.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == posting.poster %>
            <a href="/postings/<%= posting.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_posting/<%= posting.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @postings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
