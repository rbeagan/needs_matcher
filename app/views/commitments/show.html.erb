<div class="page-header">
  <h3>Commitment #<%= @commitment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @commitment.user_id %></dd>

      <dt>Posting</dt>
      <dd><%= @commitment.posting_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/commitments" class="btn btn-primary">
        Back
      </a>
      <a href="/commitments/<%= @commitment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_commitment/<%= @commitment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
