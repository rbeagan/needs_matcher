<div class="page-header">
  <h3>Commitment #<%= @commitment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @commitment.user.present? %>
          <a href="/users/<%= @commitment.user_id %>">
            <%= @commitment.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Posting</dt>
      <dd>
        <% if @commitment.posting.present? %>
          <a href="/postings/<%= @commitment.posting_id %>">
            <%= @commitment.posting.description %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/commitments" class="btn btn-primary">
        Back
      </a>
      <a href="/commitments/<%= @commitment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_commitment/<%= @commitment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
